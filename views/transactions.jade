doctype html
html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
    link(rel='preconnect' href='https://fonts.gstatic.com')
    link(href='https://fonts.googleapis.com/css2?family=Ubuntu&display=swap' rel='stylesheet')
    link(rel='stylesheet' href='/css/style.css')
    title Transactions
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarTogglerDemo01' aria-controls='navbarTogglerDemo01' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarTogglerDemo01.collapse.navbar-collapse
        a.navbar-brand(href='./index.html') The Sparks Bank
        ul.navbar-nav.mr-auto.mt-2.mt-lg-0
          li.nav-item
            a.nav-link(href='/') Home
          li.nav-item
            a.nav-link(href='/customers')
              | Customers
              span.sr-only (current)
          li.nav-item.active
            a.nav-link(href='/transactions') Transactions
        a(href='/')
            button.btn.btn-success.mr-5(type='submit') Back to Home
    .container
        table.table.table-striped
          thead.thead-dark
            tr
              th(scope='col') SNo
              th(scope='col') Sender
              th(scope='col') Receiver
              th(scope='col') Amount ( in Rs )
          tbody
            if transactions
            -var index = 1
            each transaction in transactions
                tr
                th(scope='row')=index++
                td=transaction.Sender
                td=transaction.Receiver
                td=transaction.Amount
            else
                td No Transaction
                td 
                td 
                td
        
    // Optional JavaScript
    // jQuery first, then Popper.js, then Bootstrap JS
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
